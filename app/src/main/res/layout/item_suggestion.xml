<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:background="@drawable/card_background"
    android:layout_marginVertical="4dp">

    <ImageView
        android:id="@+id/suggestionIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Suggestion icon"
        android:src="@drawable/ic_eco_tip"
        app:tint="@color/primary_green" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/suggestionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Suggestion title" />

        <TextView
            android:id="@+id/suggestionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:text="Eco-friendly suggestion description" />

        <TextView
            android:id="@+id/suggestionImpact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/small_badge_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textSize="10sp"
            android:textColor="@color/primary_green"
            android:textStyle="bold"
            android:text="Impact Level" />

    </LinearLayout>

</LinearLayout>